    <bean id="updateDataCustomer" class="ru.javabegin.training.vkt7.reports.UpdateDataCustomerList"/>

    <bean id="updateMoth" class="ru.javabegin.training.vkt7.reports.UpdateMoth"/>
    <bean id="tv7Cron" class="ru.javabegin.training.tv7.modem.Tv7Run"/>
    <bean id="tv7RevizorTest_temp" class="ru.javabegin.training.tv7.revizor.TestRevizorThread"/>


    <task:scheduler id="serverScheduler" pool-size="5"/>
    <task:scheduled-tasks scheduler="serverScheduler">


